@model IEnumerable<ArtCourseCenter.Models.Course>


@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quota)
            </th>
            <th>
                Availability
            </th>
            <th>
                Instrucor Id
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quota)
                </td>


                @if (@item.IsAvailable)
                {
                    <td>Available</td>
                }
                else
                {
                    <td>Not Available</td>
                }

                <td>
                    @Html.DisplayFor(modelItem => item.InstructorId)
                </td>
                <td><a class="btn btn-warning" href="./UpdateCourse/@item.Id"><img src="/css/Images/pencil.png" height="30" width="30" /> Edit</a></td>
                <td><a class="btn btn-danger" href="./DeleteCourse/@item.Id"><img src="/css/Images/delete.png" height="30" width="30" /> Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="btn btn-success" href="./RegisterNewCourse"><img src="/css/Images/tick.png" height="30" width="30" /> Add New Course</a>
</p>

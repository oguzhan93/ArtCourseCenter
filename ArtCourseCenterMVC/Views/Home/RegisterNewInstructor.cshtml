@model ArtCourseCenter.Models.Instructor

@{
    ViewData["Title"] = "Add New Instructor";
}

<h1>Add New Instructor</h1>

<h4>Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterNewInstructor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TRIdentityNumber" class="control-label"></label>
                <input asp-for="TRIdentityNumber" class="form-control" />
                <span asp-validation-for="TRIdentityNumber" class="text-danger"></span>
            </div>
            <div style="display:flex;">
                <div style="display:grid; width:200px">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a class="btn btn-primary" href="./GetAllInstructors">Back to List</a>
                </div>
                <div>
                </div>

            </div>
        </form>
    </div>
</div>


@{
    try
    {
        if (ViewBag.msg != null)
        {
            <label>@ViewBag.msg</label>
        }
    }
    catch
    {

    }
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model ArtCourseCenter.Models.Trainee

@{
    ViewData["Title"] = "Update Trainee";
}

<h1>Update Trainee</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateTrainee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">Payment Status
                    <input class="form-check-input" asp-for="HasPaidTheFee" /> 
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TRIdentityNumber" class="control-label">Tr Identity Number</label>
                <input asp-for="TRIdentityNumber" class="form-control" />
                <span asp-validation-for="TRIdentityNumber" class="text-danger"></span>
            </div>
            <div style="display:flex;">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-primary" href="../GetAllTrainees"><img src="/css/Images/return.png" height="30" width="30" /> Back to List</a>
            </div>
        </form>
    </div>
</div>

@{
    try
    {
        if (ViewBag.msg != null)
        {
            <label>@ViewBag.msg</label>
        }
    }
    catch
    {

    }
}



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

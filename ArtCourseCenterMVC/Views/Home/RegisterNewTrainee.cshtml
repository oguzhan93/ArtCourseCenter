@model ArtCourseCenter.Models.Trainee

@{
    ViewData["Title"] = "Add New Trainee";
}

<h1>Add New Trainee</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterNewTrainee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasPaidTheFee" /> @Html.DisplayNameFor(model => model.HasPaidTheFee)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TRIdentityNumber" class="control-label"></label>
                <input asp-for="TRIdentityNumber" class="form-control" />
                <span asp-validation-for="TRIdentityNumber" class="text-danger"></span>
            </div>
            <div style="display:flex;" >
                <div style="display:grid; width:200px">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a class="btn btn-primary" href="./GetAllTrainees">Back to List</a>
                </div>
                <div>

                </div>
                
            </div>
        </form>
    </div>
</div>

@{
    try
    {
        if ( ViewBag.msg != null)
        {
            <label>@ViewBag.msg</label>
        }
    }
    catch
    {
        
    }
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
